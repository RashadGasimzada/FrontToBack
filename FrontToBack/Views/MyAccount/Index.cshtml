@{ 
    ViewBag.Title = "My account - Bacola";
}
<main>
    <div class="container">
        <div class="links mt-3">
            <a class="link-home" href="~/home.html">Home</a>
            <i class="fa-solid fa-chevron-right link-icon"></i>
            <a href="#" class="link-shop">My account</a>
        </div>
    </div>
    <section id="login-register">
        <div class="container">
            <div class="row mt-5">
                <div class="col-xl-6 col-md-12">
                    <h4>Login</h4>
                    <form action="#">
                        <label for="email">Username or email address *</label>
                        <input type="text">
                        <label for="password">Password *</label>
                        <input type="password">
                        <input type="checkbox" class="mt-3">
                        <label for="checkbox">Remember me</label>
                        <button type="submit" class="btn btn-primary mt-3 mb-3">Log In</button>
                    </form>
                    <a class="lost-pass" href="#">Lost your password?</a>
                </div>
                <div class="col-xl-6 col-md-12">
                    <h4>Register</h4>
                    <form action="#">
                        <label for="email">Email address *</label>
                        <input type="email">
                        <label for="password">Password *</label>
                        <input type="password">
                        <p class="policy-paragraph mt-3">
                            Your personal data will be used to support your experience
                            throughout this website, to manage
                            access to your account, and for other purposes described in our <a href="#"
                                                                                               class="policy">privacy policy.</a>
                        </p>
                        <button type="submit" class="btn btn-primary mt-3 mb-3">Register</button>
                    </form>

                </div>
            </div>
        </div>
    </section>


</main>